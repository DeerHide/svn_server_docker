{
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.eol": "\n",
    "files.trimFinalNewlines": true,
    "editor.rulers": [
        120
    ],
    // YAML settings
    "yaml.format.enable": true,
    "yaml.validate": true,

    // Auto save
    "files.autoSave": "onFocusChange",

    // Search exclude
    "search.exclude": {
        "**/build/temp": true,
        "**/.venv": true,
        "config": true,
        "data": true
    }
}
